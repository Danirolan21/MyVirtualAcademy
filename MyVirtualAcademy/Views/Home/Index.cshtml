@{
    string userRole = Context.Session.GetString("Rol");
}
@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --primary: #3a6ea5;
        --primary-light: #4a8bcc;
        --secondary: #ff6b6b;
        --success: #28a745;
        --warning: #ffc107;
        --info: #17a2b8;
        --dark: #343a40;
        --gray: #6c757d;
        --gray-light: #e9ecef;
        --white: #ffffff;
    }

    /* Features Section */
    .features-section {
        padding: 50px 0;
        background-color: var(--gray-light);
        margin: 40px 0;
        border-radius: 10px;
    }

    .features-heading {
        text-align: center;
        margin-bottom: 40px;
        color: var(--dark);
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        padding: 0 20px;
    }

    .feature-card {
        background-color: var(--white);
        border-radius: 8px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .feature-icon {
        background-color: var(--primary-light);
        color: white;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 20px;
        font-size: 1.8rem;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: var(--primary);
    }

    .feature-description {
        color: var(--gray);
        line-height: 1.5;
    }

    /* Dashboard Section */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 30px;
        margin-bottom: 40px;
    }

    .dashboard-card {
        background-color: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
        border-top: 4px solid var(--primary);
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
        }

    .dashboard-card-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0 0 15px 0;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--gray-light);
        display: flex;
        align-items: center;
    }

        .dashboard-card-title i {
            margin-right: 10px;
            color: var(--primary);
        }

    .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .activity-item {
        padding: 12px 0;
        border-bottom: 1px solid var(--gray-light);
        display: flex;
        align-items: flex-start;
    }

        .activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        margin-right: 12px;
        color: var(--primary);
    }

    .activity-content {
        flex: 1;
    }

    .activity-time {
        font-size: 0.8rem;
        color: var(--gray);
        margin-top: 3px;
    }

    .calendar-preview {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        margin-top: 15px;
    }

    .calendar-day {
        display: grid;
        grid-template-columns: 60px 1fr;
        gap: 15px;
        margin-bottom: 15px;
    }

    .calendar-date {
        background-color: var(--primary);
        color: white;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
    }

    .calendar-month {
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .calendar-number {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .calendar-events {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .calendar-event {
        background-color: white;
        border-left: 3px solid var(--secondary);
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.9rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .stat-item {
        background-color: var(--gray-light);
        border-radius: 8px;
        padding: 15px;
        text-align: center;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--primary);
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--gray);
        font-size: 0.9rem;
    }

    .message-item {
        display: flex;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid var(--gray-light);
    }

        .message-item:last-child {
            border-bottom: none;
        }

    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--gray-light);
        margin-right: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: var(--primary);
    }

    .message-content {
        flex: 1;
    }

    .message-sender {
        font-weight: 600;
    }

    .message-preview {
        color: var(--gray);
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }

    .message-time {
        font-size: 0.8rem;
        color: var(--gray);
    }

    .view-all-btn {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: var(--primary);
        text-decoration: none;
        padding: 8px 0;
        background-color: var(--gray-light);
        border-radius: 5px;
        transition: background-color 0.2s ease;
    }

        .view-all-btn:hover {
            background-color: #e2e6ea;
            text-decoration: none;
        }

    .cta-section {
        background: linear-gradient(135deg, var(--secondary), #e74c3c);
        padding: 50px 0;
        text-align: center;
        color: white;
        border-radius: 10px;
        margin: 40px 0;
    }

    .cta-title {
        font-size: 2rem;
        margin-bottom: 15px;
    }

    .cta-description {
        max-width: 600px;
        margin: 0 auto 25px;
        font-size: 1.1rem;
    }

    .cta-button {
        display: inline-block;
        background-color: white;
        color: var(--secondary);
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        transition: transform 0.3s ease;
    }

        .cta-button:hover {
            transform: scale(1.05);
            text-decoration: none;
        }

    @@media (max-width: 768px) {
        .dashboard-grid

    {
        grid-template-columns: 1fr;
    }

    .features-grid {
        grid-template-columns: 1fr;
    }

    .welcome-heading {
        font-size: 2rem;
    }

    }
</style>

