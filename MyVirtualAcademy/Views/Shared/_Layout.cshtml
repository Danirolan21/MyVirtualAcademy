@{
    string userRole = Context.Session.GetString("Rol");
    int? userId = Context.Session.GetInt32("IdUsuario");
    string FotoPerfil = string.IsNullOrEmpty(Context.Session.GetString("Imagen")) ? "/assets/images/ProfileImage_Default.jpg" : Context.Session.GetString("Imagen"); 
    string Nombre = Context.Session.GetString("Nombre");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyVirtualAcademy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/typography.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyVirtualAcademy.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow py-4" style="background-color: black">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/logo.png" width="50" height="50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link fs-custom text-white"
                               asp-controller="Home" 
                            asp-action="Index">
                                INICIO
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-custom text-white" 
                            asp-controller="PersonalArea" 
                            asp-action="Index">
                                AREA PERSONAL
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-custom text-white"
                               asp-controller="Home" 
                            asp-action="Index">
                                CALENDARIO
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-custom text-white"
                               asp-controller="Home" 
                            asp-action="Index">
                                MENSAJES
                            </a>
                        </li>

                        @if (userRole == "Administrador")
                        {
                            <li class="nav-item">
                                <a class="nav-link fs-custom text-white"
                                   asp-controller="Managed" 
                                asp-action="Register">
                                    REGISTER
                                </a>
                            </li>
                        }
                    </ul>
                    @if (userId == null)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link fs-custom text-white" asp-controller="Managed" asp-action="LogIn">
                                    LOG IN
                                </a>
                            </li>
                        </ul>
                    }
                    @if (userId != null)
                    {
                        <ul class="expand-menu mr-auto">
                            <li>
                                <a class="nav-link text-white fs-custom dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <img src="@FotoPerfil" width="50" height="50" class="rounded-5" />
                                    @Nombre
                                </a>
                                <ul>
                                    <li>
                                        <a class="dropdown-item text-white" asp-controller="Managed" asp-action="Perfil">
                                            PERFIL
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-white" asp-controller="Managed" asp-action="LogOut">
                                            LOG OUT
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyVirtualAcademy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
